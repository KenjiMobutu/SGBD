<f:UserControlBase x:Class="MyPoll.View.PollAddView" x:Name="PollAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyPoll.View"
             xmlns:vw="clr-namespace:MyPoll.View"
             xmlns:f="clr-namespace:PRBD_Framework;assembly=PRBD_Framework"
             xmlns:vm="clr-namespace:MyPoll.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:PollAddViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label x:Name="labelTitle" Content="Poll Name :" VerticalAlignment="Top" Padding="5" />
        <TextBox x:Name="txtTitle" TextWrapping="Wrap" Grid.Column="1" VerticalAlignment="Center"
             Text="{Binding Poll.Title, UpdateSourceTrigger=PropertyChanged}" />

        <Label x:Name="labelType" Content="Type :" VerticalAlignment="Top" Padding="5" Grid.Row="1" />
        <ComboBox x:Name="cmbType" Grid.Column="1" VerticalAlignment="Center"
          SelectedItem="{Binding Poll.Type, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1">
            <ComboBox.Resources>
                <Style TargetType="ComboBoxItem">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=Poll.Type}" Value="Multiple">
                            <Setter Property="Content" Value="Multiple"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=Poll.Type}" Value="Single">
                            <Setter Property="Content" Value="Single"/>

                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ComboBox.Resources>
            <ComboBoxItem />
            <ComboBoxItem />
        </ComboBox>

        <Label x:Name="labelCreator" Content="Creator :" VerticalAlignment="Top" Padding="5" Grid.Row="2" />
        <TextBox x:Name="txtCreator" TextWrapping="Wrap" Grid.Column="1" VerticalAlignment="Center"
             Text="{Binding Poll.Creator.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" />

        <Label x:Name="labelIsClosed" Content="Is Closed :" VerticalAlignment="Top" Padding="5" Grid.Row="3" />
        <CheckBox x:Name="CheckBox" VerticalAlignment="Center" Padding="5" Grid.Row="3" Grid.Column="1" />

        <Label x:Name="Participants" Content="Participants" VerticalAlignment="Top" Padding="5" Grid.Row="4"  Grid.Column="0" Margin="0,20,0,0" />
        <ListView ItemsSource="{Binding Poll.Participants}" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,50,20,-50">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="&#xE107;" FontFamily="Segoe MDL2 Assets"
                                        Command="{Binding DataContext.DeleteParticipantCommand,
                                        RelativeSource={RelativeSource AncestorType={x:Type local:PollAddView}}}"
                                        CommandParameter="{Binding UserId}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        <ComboBox x:Name="cmbUsers" Grid.Row="5" VerticalAlignment="Top" Margin="1,74,91,0"
          ItemsSource="{Binding AllUsers}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedUserToAdd}" Grid.ColumnSpan="2"/>
        <Button x:Name="btnAddSelectedUser" Content="Add" Margin="0,74,20,0" Grid.Row="5" 
        Command="{Binding AddSelectedUserCommand}" HorizontalAlignment="Right" Width="60" Height="22" VerticalAlignment="Top" Grid.Column="1"/>

        <Button x:Name="btnAddCurrentUser" Content="Add Myself" Margin="40,135,250,0" Grid.Row="5" 
        Command="{Binding AddCurrentUserCommand}" Grid.ColumnSpan="2" Width="100" Grid.RowSpan="2"
                IsEnabled="{Binding CanAddCurrentUser}"/>

        <Button x:Name="btnAddAllUsers" Content="Add All Users" Margin="180,135,0,0" Grid.Row="5" Grid.Column="1" 
        Command="{Binding AddAllUsersCommand}" HorizontalAlignment="Left" Width="100" RenderTransformOrigin="0.5,0.5" Height="31" VerticalAlignment="Top">
            
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.736"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.47"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>


        <Label x:Name="Choices" Content="Choices" VerticalAlignment="Top" Padding="5" Grid.Row="4" Grid.Column="2" Margin="0,20,0,0" />
        <ListView ItemsSource="{Binding Poll.Choices}" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Margin="1,50,-1,-50">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Label}" />
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="&#xE107;" FontFamily="Segoe MDL2 Assets" Width="20" Height="20"
                                        Command="{Binding DataContext.DeleteChoiceCommand, RelativeSource={RelativeSource AncestorType={x:Type local:PollAddView}}}"
                                        CommandParameter="{Binding ChoiceId}">
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>

            </ListView.View>
        </ListView>
        <TextBox x:Name="txtNewChoice" Margin="15,72,125,0" VerticalAlignment="Top" Text="{Binding NewChoiceLabel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
         Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="5" Height="25" Width="250"/>
        <Button Content="Add" Command="{Binding AddChoiceCommand}" Margin="272,73,17,68" Grid.Column="3" Grid.Row="5" Height="25" Width="50" />

        <Grid Grid.Row="5" Grid.ColumnSpan="4" Margin="0,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button Content="Save" HorizontalAlignment="Right" Margin="0,244,13,-123" Command="{Binding Save}" Height="25" Width="75" Grid.ColumnSpan="2" Grid.Row="6" />
            <Button Content="Cancel" Margin="0,244,1,-123" Command="{Binding Cancel}" Grid.Column="2" Height="25" Width="75" HorizontalAlignment="Right" Grid.Row="6"  />
        </Grid>


    </Grid>

</f:UserControlBase>
